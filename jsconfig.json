{
    "compilerOptions": {
        "target": "esnext",
        "checkJs": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "module": "commonjs",
        "paths": {
            "@/*": [
                "./src/*"
            ],
        }
    },
    "exclude": [
        "dist",
        "temp",
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "types/**/*",
        "node_modules/lodash"
    ]
}